<script language='javascript'>
    function hideadd()
    {
        var info = document.getElementById('add');
        if(info.style.display == "")
           info.style.display = "none";
        else
           info.style.display = "";
    }
 </script>
 
<legend onclick="hideadd()" contenteditable="false">添加Tips</legend>

<form id='add' style="display:none" action='/data/tips/add' class='form-horizontal'>
   <div class="control-group"><label class="control-label" contenteditable="true" for="inputEmail">作者</label>
       <div class="controls"><input name="author" placeholder="" type="text" /></div>
   </div>
   <div class="control-group"><label class="control-label" contenteditable="true" for="inputEmail">标签</label>
       <div class="controls"><input name="tags" placeholder="" type="text" /></div>
   </div>
   <div class="control-group"><label class="control-label" contenteditable="true" for="inputEmail">内容</label>
       <div class="controls"><textarea name="content" placeholder="" type="text" ></textarea></div>
   </div>
   
   <div class="control-group">
      <div class="controls"><button class="btn" contenteditable="true" type="submit">提交</button></div>
   </div>
