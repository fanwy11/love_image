<% tips = locals[:tips]
   bg = ["FFFFFF","CCCCCC"]
   flag = true
   tips.each do |tip| 
     style = bg[0]
     style = bg[1] if flag
     flag = (not flag)
        
     data="<div  class=\"row-fluid\">
	        <div class=\"span12\">		
		   <blockquote  style=\"background:##{style}\">
		      <p><strong>作者：</strong> #{tip.author}&nbsp; 
                         <strong>标签：</strong> #{tip.tags}&nbsp;
                         <strong>创建时间：</strong> #{tip.created_at}&nbsp;
                      </p>
                      <h3><em >#{tip.content}</em></h3>
                   </blockquote>
	        </div>
            </div>"
%>
<%= data%>
<% end %>
